  function printWithoutLinkStyle($content) {
    // get first bit
    $pos = strpos($content,'a:link');
    $content1 = substr($content,0,$pos); 
    // get end bit
    $pos = strrpos($content,'.style0');
    $content2 = substr($content, $pos, strlen($content) ); 

    echo $content1 . $content2;
  }
?>

